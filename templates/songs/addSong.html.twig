{% extends 'cover.html.twig' %}


{% block title %} Add a song {% endblock %}

{% block stylesheets %}


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <link href="{{ asset('/css/signin.css') }}" rel="stylesheet">
{% endblock %}


{% block main %}

    <h1 class="cover-heading">Add a song</h1>
    {{ form_start(form, {'attr':{'class':'form-signin mt-4'}}) }}


    {{ form_widget(form.title, {'attr': {'class': 'form-control mb-2', 'type': 'text',
        'max':'64', 'placeholder': 'song title', 'required':'true'}}) }}

    {{ form_widget(form.singer, {'attr': {'class': 'form-control mb-2', 'type': 'text',
        'max':'64', 'placeholder': 'singer', 'required':'true'}}) }}

    {{ form_label(form.genre, 'Genre') }}
    {{ form_widget(form.genre, {'attr': {'class': 'form-control mb-2'}}) }}


    {{ form_row(form.file,{'attr': {'class': 'mb-3 rounded', 'accept':'audio/*'}}) }}



    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <button type="submit" class="btn btn-secondary btn-lg">Add</button>

    {{ form_end(form) }}


{% endblock %}